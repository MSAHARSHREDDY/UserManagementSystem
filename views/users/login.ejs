<%-include("../layouts/header.ejs")-%>
    <div class="container mt-5">
        <div class="row">
            <div class="col-sm-6 m-auto">
                <h2>Login</h2>
                <%
                if(typeof message!=="undefined")
                {
                    %>
                        <p style="color: red;"><%=message%></p>
                    <%

                }
                %> 
                <form method="post">
                    <div class="mb-3">
                        <label>Email</label>
                        <input type="email" name="email" class="form-control mt-2"  autofocus required >
                    </div>
                    <div class="mb-3">
                        <label>Password</label>
                        <input type="password" name="password" class="form-control mt-2" autocomplete="off" required>
                    </div>
                    <button type="submit" class="btn btn-success">Login</button>
                </form>
                
              
               

            </div>
        </div>
    </div>
<%-include("../layouts/footer.ejs")-%>
