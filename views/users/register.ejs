<%-include("../layouts/header.ejs")-%>
    <div class="container mt-5">
        <div class="row">
            <div class="col-sm-6 m-auto">
                <h2>User Registration</h2>
                <form method="post" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label >Name</label>
                        <input type="text" name="name" class="form-control mt-2"  autofocus required>
                    </div>
                    <div class="mb-3">
                        <label>Email</label>
                        <input type="email" name="email" class="form-control mt-2"  required >
                    </div>
                    <div class="mb-3">
                        <label>Mobile</label>
                        <input type="text" name="mobile" class="form-control mt-2" required >
                    </div>
                    <div class="mb-3">
                        <label>File</label>
                        <input type="file" name="image" required >
                    </div>
                    <div class="mb-3">
                        <label>Password</label>
                        <input type="password" name="password" class="form-control mt-2"required>
                    </div>
                    <button type="submit" class="btn btn-success">Register</button>
                </form>
                
              
                <%
                if(typeof message!=="undefined")
                {
                    %>
                        <p style="color: green;"><%=message%></p>
                    <%

                }
                %>

            </div>
        </div>
    </div>
<%-include("../layouts/footer.ejs")-%>
